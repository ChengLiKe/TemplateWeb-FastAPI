HOST=localhost
PORT=8000
TITLE="Template-FastAPI"
VERSION="0.0.1"

# CORS Allowed sources split by ","
CORS_ORIGINS=*

# Logging level: DEBUG/INFO/WARNING/ERROR
LOG_LEVEL=DEBUG

# Prometheus metrics
METRICS_ENABLED=true
METRICS_ENDPOINT=/metrics

# Database (disabled by default). Enable and set DATABASE_URL to use.
DB_ENABLED=false
# Example SQLite file: sqlite:///./app.db
# Example Postgres: postgresql+psycopg://user:pass@localhost:5432/dbname
DATABASE_URL=
DB_ECHO=false

# Redis cache (disabled by default). Enable and set CACHE_URL to use.
CACHE_ENABLED=false
# Example Redis: redis://localhost:6379/0
CACHE_URL=

# OpenTelemetry tracing (disabled by default). Enable to export traces.
TRACING_ENABLED=false
TRACING_SERVICE_NAME=fastapi-template
# OTLP HTTP endpoint example: http://localhost:4318/v1/traces
TRACING_ENDPOINT=
TRACING_SAMPLER_RATIO=1.0